{
  "$schema": "http://json-schema.org/schema",
  "$id": "https://biodiversitynetgain.naturalengland.gov.uk/registration.schema.json",
  "title": "Biodiversity Net Gain Landowner Registration",
  "description": "An individual landowner registration for a Biodiversity Net Gain Application",
  "type": "object",
  "properties": {
    "landownerGainSiteRegistration": {
      "type": "object",
      "properties": {
        "applicant": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "role": {
              "type": "string"
            }
          },
          "required": [
            "id",
            "role"
          ]
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "contentMediaType": {
                "type": "string"
              },
              "fileType": {
                "type": "string"
              },
              "fileSize": {
                "type": "number"
              },
              "fileLocation": {
                "type": "string"
              },
              "fileName": {
                "type": "string"
              }
            },
            "required": [
              "contentMediaType",
              "fileType",
              "fileSize",
              "fileLocation",
              "fileName"
            ]
          }
        },
        "gainSiteReference": {
          "type": "string"
        },
        "landBoundaryGridReference": {
          "type": "string"
        },
        "landBoundaryHectares": {
          "type": "number"
        },
        "legalAgreementParties": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "role": {
                "type": "string"
              }
            }
          }
        },
        "legalAgreementType": {
          "type": "string",
          "enum": ["759150000", "759150001", "759150002", "-1"]
        },
        "legalAgreementStartDate": {
          "type": "string",
          "format": "date-time"
        },
        "submittedOn": {
          "type": "string",
          "format": "date-time"
        },
        "metricData": {
          "type": "object",
          "properties": {
            "startPage": {
              "type": "object",
              "properties": {
                "planningAuthority": {
                  "type": "string"
                },
                "projectName": {
                  "type": "string"
                },
                "planningApplicationReference": {
                  "type": "string"
                },
                "targetNetGain": {
                  "type": "number"
                },
                "irreplaceableHabitatPresentOnSiteAtBaseline": {
                  "type": "string"
                },
                "totalSiteAreaIncludingIrreplaceableHabitatArea": {
                  "type": "number"
                },
                "containsDeviationsFromTheStatutoryMetricThisMustBeAgreedWithConsentingBody": {
                  "type": "string"
                },
                "onSiteBaselineMapReferenceNumber": {
                  "type": "string"
                },
                "offSiteBaselineMapReferenceNumber": {
                  "type": "string"
                },
                "cells": {
                  "type": "object",
                  "properties": {
                    "version": {
                      "type": "number"
                    }
                  }
                }
              }
            },
            "d1": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "Broad habitat": {
                    "type": "string"
                  },
                  "Habitat type": {
                    "type": "string"
                  },
                  "Area (hectares)": {
                    "type": "number"
                  },
                  "Strategic significance": {
                    "type": "string"
                  },
                  "Total habitat units": {
                    "type": "number"
                  },
                  "Off-site reference": {
                    "type": "string"
                  },
                  "Condition": {
                    "type": "string"
                  }
                }
              }
            },
            "d2": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "Delay in starting habitat creation (years)": {
                    "type": "number"
                  },
                  "Off-site reference": {
                    "type": "number"
                  },
                  "Broad habitat": {
                    "type": "string"
                  },
                  "Proposed habitat": {
                    "type": "string"
                  },
                  "Area (hectares)": {
                    "type": "number"
                  },
                  "Condition": {
                    "type": "string"
                  },
                  "Habitat units delivered": {
                    "type": "number"
                  },
                  "Habitat created in advance (years)": {
                    "type": "number"
                  }
                }
              }
            },
            "d3": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "Baseline habitat": {
                    "type": "string"
                  },
                  "Total habitat area": {
                    "type": "number"
                  },
                  "Proposed Broad Habitat": {
                    "type": "string"
                  },
                  "Condition change": {
                    "type": "string"
                  },
                  "Habitat enhanced in advance (years)": {
                    "type": "number"
                  },
                  "Delay in starting habitat enhancement (years)": {
                    "type": "number"
                  },
                  "Off-site reference": {
                    "type": "string"
                  },
                  "Area (hectares)": {
                    "type": "number"
                  },
                  "Condition": {
                    "type": "string"
                  },
                  "Habitat units delivered": {
                    "type": "number"
                  },
                  "Proposed habitat": {
                    "type": "string"
                  },
                  "Distinctiveness change": {
                    "type": "string"
                  }
                }
              }
            },
            "e1": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "Hedgerow type": {
                    "type": "string"
                  },
                  "Length (km)": {
                    "type": "number"
                  },
                  "Total hedgerow units": {
                    "type": "number"
                  },
                  "Condition": {
                    "type": "string"
                  }
                }
              }
            },
            "e2": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "Habitat type": {
                    "type": "string"
                  },
                  "Length (km)": {
                    "type": "number"
                  },
                  "Delay in starting habitat creation (years)": {
                    "type": "number"
                  },
                  "Hedge units delivered": {
                    "type": "number"
                  },
                  "Condition": {
                    "type": "string"
                  },
                  "Habitat created in advance (years)": {
                    "type": "number"
                  }
                }
              }
            },
            "e3": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "Baseline habitat": {
                    "type": "string"
                  },
                  "Length (km)": {
                    "type": "number"
                  },
                  "Habitat enhanced in advance (years)": {
                    "type": "number"
                  },
                  "Delay in starting habitat enhancement (years)": {
                    "type": "number"
                  },
                  "Proposed habitat": {
                    "type": "string"
                  },
                  "Hedge units delivered": {
                    "type": "number"
                  },
                  "Condition": {
                    "type": "string"
                  }
                }
              }              
            },
            "f1": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "Watercourse type": {
                    "type": "string"
                  },
                  "Length (km)": {
                    "type": "number"
                  },
                  "Total watercourse units": {
                    "type": "number"
                  },
                  "Condition": {
                    "type": "string"
                  }
                }
              }
            },
            "f2": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "Watercourse type": {
                    "type": "string"
                  },
                  "Habitat created in advance (years)": {
                    "type": "number"
                  },
                  "Delay in starting habitat creation (years)": {
                    "type": "number"
                  },
                  "Watercourse units delivered": {
                    "type": "number"
                  },
                  "Condition": {
                    "type": "string"
                  },
                  "Length (km)": {
                    "type": "number"
                  }
                }
              }
            }
            ,
            "f3": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "Baseline habitat": {
                    "type": "string"
                  },
                  "Length (km)": {
                    "type": "number"
                  },
                  "Habitat enhanced in advance (years)": {
                    "type": "number"
                  },
                  "Delay in starting habitat enhancement (years)": {
                    "type": "number"
                  },
                  "Proposed habitat": {
                    "type": "string"
                  },
                  "Watercourse units delivered": {
                    "type": "number"
                  },
                  "Condition": {
                    "type": "string"
                  }
                }
              }
            },
            "validation": {
              "type": "object",
              "properties": {
                "isMetricWorkbook": {
                  "type": "boolean"
                },
                "isVersion4OrLater": {
                  "type": "boolean"
                },
                "isOffsiteDataPresent": {
                  "type": "boolean"
                },
                "areOffsiteTotalsCorrect": {
                  "type": "boolean"
                }
              },
              "required": [
                "isVersion4OrLater",
                "isOffsiteDataPresent",
                "areOffsiteTotalsCorrect"
              ]
            }            
          },
          "required": [
            "validation"
          ]
        },
        "payment": {
          "type": "object",
          "properties": {
            "caseType": {
              "type": "string"
            },
            "fee": {
              "type": "number"
            },
            "method": {
              "type": "string",
              "enum": ["BACS"]
            }
          },
          "required": [
            "caseType",
            "fee",
            "method"
          ]
        }
      },
      "required": [
        "applicant",
        "files",
        "gainSiteReference",
        "landBoundaryGridReference",
        "landBoundaryHectares",
        "legalAgreementParties",
        "legalAgreementType",
        "legalAgreementStartDate",
        "submittedOn",
        "metricData",
        "payment"
      ]
    }
  },
  "required": [
    "landownerGainSiteRegistration"
  ]
}
