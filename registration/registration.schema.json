{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://biodiversitynetgain.naturalengland.gov.uk/registration.schema.json",
  "title": "Biodiversity Net Gain Landowner Registration",
  "description": "An individual landowner registration for a Biodiversity Net Gain Application",
  "type": "object",
  "properties": {
    "landownerGainSiteRegistration": {
      "type": "object",
      "properties": {
        "applicant": {
          "type": "object",
          "properties": {
            "id": {
              "description": "DefraID account identifier.",
              "type": "string"
            },
            "role": {
              "description": "Role of the person completing the application.",
              "examples": [
                "Landowner",
                "Ecologist",
                "Developer"
              ],
              "type": "string"
            }
          },
          "required": [
            "id",
            "role"
          ]
        },
        "organisation": {
          "type": "object",
          "properties": {
            "id": {
              "description": "DefraID account identifier.",
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "dateOfIncorporation": {
              "type": "string",
              "format": "date"
            },
            "registeredAddress": {
              "type": "string"
            }
          },
          "required": [
            "id"
          ]
        },
        "habitats": {
          "type": "object",
          "properties": {
            "baseline": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "habitatType": {
                    "type": "string"
                  },
                  "baselineReference": {
                    "type": "string"
                  },
                  "condition": {
                    "type": "string"
                  },
                  "area": {
                    "type": "object",
                    "properties": {
                      "beforeEnhancement": {
                        "type": "number"
                      },
                      "afterEnhancement": {
                        "type": "number"
                      }
                    },
                    "required": [
                      "beforeEnhancement",
                      "afterEnhancement"
                    ]
                  },
                  "measurementUnits": {
                    "type": "string",
                    "enum": ["hectares", "kilometres"]
                  }
                },
                "required": [
                  "habitatType",
                  "baselineReference",
                  "condition",
                  "area"
                ]
              }
            },
            "proposed": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "proposedHabitatId": {
                    "type": "string"
                  },
                  "baselineReference": {
                    "type": "string"
                  },
                  "module": {
                    "type": "string",
                    "enum": ["Baseline", "Created", "Enhanced"]
                  },
                  "state": {
                    "type": "string",
                    "enum": ["Habitat", "Hedge", "Watercourse"]
                  },
                  "habitatType": {
                    "type": "string"
                  },
                  "condition": {
                    "type": "string"
                  },
                  "strategicSignificance": {
                    "type": "string"
                  },
                  "advanceCreation": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 30
                  },
                  "delayedCreation": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 30
                  },
                  "encroachmentExtent": {
                    "type": "string"
                  },
                  "encroachmentExtentBothBanks": {
                    "type": "string"
                  },
                  "area": {
                    "description": "Area covered by the habitat.",
                    "type": "number"
                  },
                  "measurementUnits": {
                    "type": "string",
                    "enum": ["hectares", "kilometres"]
                  }
                },
                "required": [
                  "proposedHabitatId",
                  "baselineReference",
                  "module",
                  "state",
                  "habitatType",
                  "condition",
                  "strategicSignificance",
                  "advanceCreation",
                  "delayedCreation",
                  "area",
                  "measurementUnits"
                ]
              }
            }
          },
          "required": [
            "baseline",
            "proposed"
          ]
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "contentMediaType": {
                "type": "string"
              },
              "fileType": {
                "type": "string"
              },
              "fileSize": {
                "type": "number"
              },
              "fileLocation": {
                "type": "string"
              },
              "fileName": {
                "type": "string"
              }
            },
            "required": [
              "contentMediaType",
              "fileType",
              "fileSize",
              "fileLocation",
              "fileName"
            ]
          }
        },
        "gainSiteReference": {
          "type": "string"
        },
        "landBoundaryGridReference": {
          "type": "string"
        },
        "landBoundaryHectares": {
          "type": "number"
        },
        "legalAgreementParties": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "role": {
                "type": "string"
              }
            }
          }
        },
        "legalAgreementType": {
          "type": "string",
          "enum": ["759150000", "759150001", "759150002", "-1"]
        },
        "legalAgreementStartDate": {
          "type": "string",
          "format": "date-time"
        },
        "submittedOn": {
          "type": "string",
          "format": "date-time"
        },
        "payment": {
          "type": "object",
          "properties": {
            "reference": {
              "type": "string"
            },
            "method": {
              "type": "string",
              "enum": ["BACS"]
            }
          },
          "required": [
            "reference",
            "method"
          ]
        }
      },
      "required": [
        "applicant",
        "habitats",
        "files",
        "gainSiteReference",
        "landBoundaryGridReference",
        "landBoundaryHectares",
        "legalAgreementParties",
        "legalAgreementType",
        "legalAgreementStartDate",
        "submittedOn",
        "payment"
      ]
    }
  },
  "required": [
    "landownerGainSiteRegistration"
  ]
}
