{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://biodiversitynetgain.naturalengland.gov.uk/allocation.schema.json",
  "title": "Biodiversity Net Gain Developer Allocation",
  "description": "An individual developer allocation for a Biodiversity Net Gain Application",
  "type": "object",
  "properties": {
    "developerRegistration": {
      "type": "object",
      "properties": {
        "applicant": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "role": {
              "type": "string"
            }
          },
          "required": [
            "id",
            "role"
          ]
        },
        "habitats": {
          "type": "object",
          "properties": {
            "allocated": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "allocatedHabitatId": {
                    "type": "string"
                  },
                  "area": {
                    "type": "number"
                  },
                  "module": {
                    "type": "string",
                    "enum": ["Baseline", "Created", "Enhanced"]
                  },
                  "state": {
                    "type": "string",
                    "enum": ["Habitat", "Hedge", "Watercourse"]
                  },
                  "deliveredUnits": {
                    "type": "number"
                  },
                  "measurementUnits": {
                    "type": "string",
                    "enum": ["hectares", "kilometres"]
                  }
                },
                "required": [
                  "id",
                  "area",
                  "deliveredUnits",
                  "measurementUnits"
                ]
              }
            }
          },
          "required": [
            "proposed"
          ]
        },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "contentMediaType": {
                "type": "string"
              },
              "fileType": {
                "type": "string"
              },
              "fileSize": {
                "type": "number"
              },
              "fileLocation": {
                "type": "string"
              },
              "fileName": {
                "type": "string"
              }
            },
            "required": [
              "contentMediaType",
              "fileType",
              "fileSize",
              "fileLocation",
              "fileName"
            ]
          }
        },
        "developmentDetails": {
          "projectName": {
            "type": "string"
          },
          "localAuthority": {
            "type": "string"
          },
          "planningReference": {
            "type": "string"
          },
          "allocatedGainSites": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "gainSiteReference": {
                  "type": "string"
                }
              }
            }
          }
        },
        "referenceNumber": {
          "type": "string"
        },
        "payment": {
          "type": "object",
          "properties": {
            "reference": {
              "type": "string"
            },
            "method": {
              "type": "string",
              "enum": ["BACS"]
            }
          },
          "required": [
            "reference",
            "method"
          ]
        },
        "submittedOn": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "applicant",
        "habitats",
        "files",
        "developmentDetails",
        "allocatedGainSites",
        "referenceNumber",
        "submittedOn",
        "payment"
      ]
    }
  },
  "required": [
    "developerRegistration"
  ]
}
